<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".UpdateProduct">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#4657C5"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Update Product"
            android:gravity="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/alabaster"/>
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Image"
                android:layout_marginTop="10dp"
                android:textSize="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/rectangle"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivUpdateProduct"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:src="@drawable/camera48"/>
                <ImageView
                    android:id="@+id/ivImageProduct"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Product Name"
                    android:layout_marginTop="10dp"
                    android:textSize="20dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/etUpdateProductName"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="Product Name"
                        android:textSize="20dp"
                        android:inputType="text"
                        android:background="@drawable/rectangle"
                        android:gravity="center"/>
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stock Available"
                    android:layout_marginTop="10dp"
                    android:textSize="20dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/etUpdateStockAvailable"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="Stock Available"
                        android:textSize="20dp"
                        android:inputType="number"
                        android:background="@drawable/rectangle"
                        android:gravity="center"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Minimum Stock Available"
                    android:layout_marginTop="10dp"
                    android:textSize="20dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/etUpdateMinStockAvailable"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="Min Stock Available"
                        android:textSize="20dp"
                        android:inputType="number"
                        android:background="@drawable/rectangle"
                        android:gravity="center"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Measuring Unit"
                    android:layout_marginTop="10dp"
                    android:textSize="20dp"/>

                <Spinner
                    android:id="@+id/spUpdateAddMeasurementUnit"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:elevation="10dp"
                    android:dropDownWidth="match_parent"
                    android:visibility="visible"
                    android:textAlignment="center"
                    android:spinnerMode="dropdown"
                    android:saveEnabled="true"
                    android:outlineProvider="background"
                    android:animationCache="true"
                    android:background="@drawable/rectangle">

                </Spinner>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Purchase Cost"
                    android:layout_marginTop="10dp"
                    android:textSize="20dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/etUpdatePurchaseCost"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="Purchase Cost"
                        android:textSize="20dp"
                        android:inputType="number"
                        android:background="@drawable/rectangle"
                        android:gravity="center"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sale Cost"
                    android:layout_marginTop="10dp"
                    android:textSize="20dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/etUpdateSaleCost"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="Sale Cost"
                        android:textSize="20dp"
                        android:inputType="number"
                        android:background="@drawable/rectangle"
                        android:gravity="center"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_marginTop="630dp"
    android:orientation="horizontal">

    <Button
        android:id="@+id/btnCancelUpdateProduct"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/cancel96"
        android:layout_margin="10dp"/>


    <Button
        android:id="@+id/btnUpdateProduct"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="120dp"
        android:background="@drawable/done96"/>
</LinearLayout>
</RelativeLayout>